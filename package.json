{
	"name": "next-chakra-ui",
	"version": "1.0.0",
	"description": "Chakra UI React components for Next.js",
	"type": "module",
	"main": "dist/index.js",
	"typings": "dist/index.d.ts",
	"files": [
		"dist",
		"src"
	],
	"engines": {
		"node": ">=16"
	},
	"source": "src/index.ts",
	"directories": {
		"test": "tests"
	},
	"scripts": {
		"start": "tsup-node --watch",
		"test": "jest test --coverage",
		"test:watch": "npm run test -- --watch",
		"tsc": "tsc",
		"build": "tsup-node",
		"prepare": "husky install && npm run build",
		"lint": "xo"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/bjoluc/next-chakra-ui.git"
	},
	"author": "bjoluc <mail@bjoluc.de>",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/bjoluc/next-chakra-ui/issues"
	},
	"homepage": "https://github.com/bjoluc/next-chakra-ui#readme",
	"peerDependencies": {
		"@chakra-ui/react": ">=2",
		"next": ">=12"
	},
	"devDependencies": {
		"@bjoluc/eslint-config-xo-next": "^1.1.0",
		"@bjoluc/semantic-release-config-npm": "^3.0.0",
		"@chakra-ui/react": "^2.2.4",
		"@emotion/react": "^11.9.3",
		"@emotion/styled": "^11.9.3",
		"@testing-library/react": "^13.3.0",
		"@types/react": "^18.0.15",
		"framer-motion": "^6.5.1",
		"husky": "^8.0.1",
		"jest-environment-jsdom": "^28.1.3",
		"lint-staged": "13.0.3",
		"next": "^12.2.2",
		"tslib": "^2.4.0",
		"tsup": "^6.2.2",
		"typescript": "^4.7.4"
	},
	"tsup": {
		"entry": [
			"src/index.ts"
		],
		"format": "esm",
		"target": "node16",
		"clean": true,
		"sourcemap": true,
		"dts": true
	},
	"xo": {
		"extends": "@bjoluc/xo-next",
		"prettier": true,
		"rules": {}
	},
	"prettier": "@bjoluc/eslint-config-xo-next/prettier.config",
	"importSort": {
		".ts, .tsx, .js, .jsx": {
			"style": "module",
			"parser": "typescript"
		}
	},
	"lint-staged": {
		"**/*.{ts,tsx}": [
			"xo --fix"
		]
	},
	"release": {
		"extends": "@bjoluc/semantic-release-config-npm"
	},
	"dependencies": {
		"@types/jest": "^28.1.6",
		"jest": "^28.1.3",
		"ts-jest": "^28.0.7"
	}
}
